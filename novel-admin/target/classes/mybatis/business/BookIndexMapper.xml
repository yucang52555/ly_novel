<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lyqiaofu.business.dao.BookIndexDao">

	<select id="list" resultType="com.lyqiaofu.business.domain.BookIndexDO">
		select
			`id`,`cat_name`,`book_name`,`author_name`,`book_desc`,`visit_count`,
			`word_count`,`comment_count`
		from
			book_index
		order by id desc
		<if test="offset != null and limit != null">
			limit ${offset}, ${limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from book_index
	</select>

	<delete id="remove">
		delete from book_index where book_id = #{bookId}
	</delete>

</mapper>